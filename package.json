{
  "name": "yang-gang-court",
  "version": "1.0.0",
  "description": "Telegram bot for yang gang to do the arbitration",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "NODE_ENV=development nodemon index.js",
    "setup:db": "node scripts/setup-db.js",
    "dev:db:setup": "npm run dev:db:generate && npm run dev:db:push",
    "dev:db:generate": "prisma generate --schema=prisma/schema.dev.prisma",
    "dev:db:push": "prisma db push --schema=prisma/schema.dev.prisma",
    "dev:db:studio": "prisma studio --schema=prisma/schema.dev.prisma",
    "prod:db:setup": "npm run db:generate && npm run db:push",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "telegram",
    "bot",
    "nodejs",
    "railway"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-telegram-bot-api": "^0.66.0",
    "pg": "^8.16.3",
    "prisma": "^6.13.0"
  },
  "devDependencies": {
    "jest": "^30.0.5",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
